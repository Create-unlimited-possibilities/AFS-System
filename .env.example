# ======== 基础配置 ========
NODE_ENV=development
PORT=3000

# ======== MongoDB ========
MONGO_URI=mongodb://mongoserver:27017/afs_db

# ======== Ollama ========
OLLAMA_BASE_URL=http://modelserver:11434

# ======== 翻译API========
#Google Cloud Translate
GOOGLE_TRANSLATE_API_KEY=your_key_here

# ======== OpenAI Whisper ========
OPENAI_API_KEY=your_openai_api_key_here

# ======== JWT ========
JWT_SECRET=afs-super-secret-key-2025-change-me-in-production

# ======== 前端API地址 ========
VITE_API_BASE_URL=http://localhost:3000/api

# ======== 知识代理配置 ========
# OpenAI Embedding (可选 - 用于更好的嵌入质量)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100

# ChromaDB配置
CHROMA_DB_PATH=/app/storage/chroma_db

# ======== 农业系统配置 ========
MODEL_SERVER_URL=http://modelserver:8000
WEATHER_API_KEY=your_openweathermap_api_key_here

# ======== IoT 模拟器配置 ========
IOT_SIMULATOR_URL=http://iot-simulator:8080

# ======== LLM 配置 ========
# 是否优先使用 API LLM
USE_API_LLM=false

# API LLM 配置
API_LLM_KEY=your_api_key_here
API_LLM_MODEL=gpt-3.5-turbo

# 本地 Ollama 配置
OLLAMA_MODEL=qwen2.5
OLLAMA_MODEL_PATH=@model\models\blobs\

# LLM 降级策略
# api-local: 优先 API，失败后本地
# local-api: 优先本地，失败后 API
# none: 只使用配置的方式
LLM_FALLBACK_STRATEGY=api-local

# LLM 参数配置
LLM_TIMEOUT=30000
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.7